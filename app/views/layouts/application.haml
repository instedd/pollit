%html{"xmlns:ng" =>"http://angularjs.org"}
  %head
    %title Pollit
    = stylesheet_link_tag 'http://dax7k8orhij0j.cloudfront.net/theme/stylesheets/theme.css'
    = javascript_include_tag 'http://dax7k8orhij0j.cloudfront.net/theme/javascripts/jquery-1.6.2.min.js'
    = javascript_include_tag 'http://dax7k8orhij0j.cloudfront.net/theme/javascripts/theme.js'
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #user_nav
    - if user_signed_in?
      Signed in as #{current_user.email}. Not you?
      = link_to "Sign out", destroy_user_session_path, :method => :delete
    - else
      = link_to "Sign up", new_user_registration_path
      or 
      = link_to "sign in", new_user_session_path
    %br
    %br
    = yield