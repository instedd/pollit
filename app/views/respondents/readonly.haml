- add_breadcrumb "Respondents", poll_respondents_path(@poll)

= render :partial => 'shared/form_header', :locals => { :poll => @poll, :active_tab => 'respondents' }

%p The list of respondents cannot be modified as the poll has already started.

%div.content
  %ul.clist.w30
    - @poll.respondents.each do |r|
      %li
        = text_field_tag 'phone.number', r.unprefixed_phone, :disabled => true
        = button_tag "", :type => :button, :class => "clist-remove", :disabled => true

  %br
  %hr
  .actions
    = white_link_to "Back", @poll
